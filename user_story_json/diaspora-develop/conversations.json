                    ],
                    [
                        "I confirm the alert after I click on selector \"a.remove\""
                    ]
                ],
                "thens_list": [
                    [
                        "I should see \"Greetings\" within \".conversation h3\"",
                        "\"Alice Awesome\" should be part of active conversation",
                        "I should see \"hello, alice!\" within \".stream-element\""
                    ],
                    [
                        "I should see \"hey, how you doing?\""
                    ],
                    [
                        "I should not see \"hey, how you doing\""
                    ]
                ]
            }
        ]
    }
}