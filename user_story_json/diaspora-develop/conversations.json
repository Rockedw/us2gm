{
    "feature_name": "private conversations mobile",
    "user_story": {
        "as_a": "mobile user",
        "i_want": "converse with people",
        "so_that": "be talkative",
        "scenarios": [
            {
                "givens_list": [
                    [
                        "I send a mobile message with subject \"Greetings\" and text \"hello, alice!\" to \"Alice Awesome\""
                    ]
                ],
                "whens_list": [
                    [
                        "I sign in as \"alice@alice.alice\" on the mobile website",
