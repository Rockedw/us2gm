                    ]
                ]
            },
            {
                "givens_list": [],
                "whens_list": [
                    [
                        "I sign in as \"alice@alice.alice\" on the mobile website",
                        "I go to the activity stream page"
                    ]
                ],
                "thens_list": [
                    [
                        "I should see \"My activity\" within \"#main\"",
                        "I should see \"Hello! I am #newhere\" within \".ltr\""
                    ]
                ]
